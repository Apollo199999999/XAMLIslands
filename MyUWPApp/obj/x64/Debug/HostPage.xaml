<Page
    x:Class="MyUWPApp.HostPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyUWPApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:ConnectionId='2'                                          x:Name="NavView">
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='3' Content="Blank Page 1" Icon="AllApps" x:Name="Page1"/>
                <NavigationViewItem x:ConnectionId='4' Content="Blank Page 2" Icon="Comment" x:Name="Page2"/>
                <NavigationViewItem x:ConnectionId='5' Content="Blank Page 3" Icon="Home" x:Name="Page3"/>
            </NavigationView.MenuItems>
            <Frame x:ConnectionId='6' x:FieldModifier="public" x:Name="contentFrame"/>
        </NavigationView>
        
    </Grid>
</Page>

